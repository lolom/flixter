<!DOCTYPE html>
<html>
  <head>
    <title>Flixter</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="//vjs.zencdn.net/5.12.6/video-js.css" rel="stylesheet">
  </head>


  <body>


    <div id="flex-content-container">
      <nav class="navbar navbar-inverse">
        <div class="container-fluid">
          <div class="navbar-header">
            <%= link_to 'Flixter', root_path, class: 'navbar-brand' %>
          </div>
          <ul class="nav navbar-nav navbar-right">
            <li class="nav-item">
              <%= link_to 'See All Courses', courses_path, class: 'nav-link' %>
            </li>
            <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to 'My Dashboard', dashboard_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'nav-link' %>
            </li>
            <% else %>
            <li class="nav-item">
              <%= link_to 'Sign in', new_user_session_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Sign up', new_user_registration_path, class: 'nav-link' %>
            </li>
            <% end %>
          </ul>
        </div>
      </nav>


<% if notice.present? %>
  <p class="alert alert-info"><%= notice %></p>
<% end %>
<% if alert.present? %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>
    <%= yield %>
    </div>

        <div id="footer">
          <div class="container">
            <div class="row">                         
      <div class="col-12 col-sm-3">
        <br /> 
        <b>Teachers</b>
        <br />
        <%= link_to 'Teach a Course', new_instructor_course_path %>
        <br />
        <%= link_to 'My Dashboard', dashboard_path %>
      </div>
      <div class="col-12 col-sm-3">
        <br />
        <b>About</b>
        <br />
        <%= link_to 'Team', team_path %>
        <br />
        <%= link_to 'Careers', careers_path %>
        <br />
        <%= link_to 'Privacy Policy', privacy_path %>
      </div>
      <div class="col-12 col-sm-3">
        <br />
        <b>Contact</b>
        <br />
        me@lorenamaldonado.com
        <br />
        Bogota
        <br />
        Colombia
      </div>
      <div class="col-12 col-sm-3 social">
        <br />
        <b>Social</b>
          <br />
          <%= link_to '//github.com/lolom' do %>
          <span class="fa fa-github-square fa-2x social-button"></span>
          <% end %>
          </div>
          </div>
          </div>
        </div>
        <script src="//vjs.zencdn.net/5.12.6/video.js"></script>
        <script src="//vjs.zencdn.net/ie8/1.1.2/videojs-ie8.min.js"></script>

  </body>
</html>
