<div class="booyah-box col-10 offset-1">
  <h1 class="text-center">Learn something today</h1>
  <hr />

   <% @courses.each do |course| %>
    <h2 class="text-center">
      <%= link_to course.title, course_path(course) %>
    </h2><br />

    <br />
    <br />
    <div class="text-center"><%= image_tag course.image, class: "img-fluid text-center" %></div>
    <br/>
    <br />
    <div class="text-center">
      <%= course.description %>
    </div><br />
    <div class="text-center">
      <%= link_to 'More Details...', course_path(course), class: 'btn btn-success' %>
    </div>
    <hr /><br /><br /> 
    <br class="clr" />
  <% end %>
</div>